doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title TMProject
  body
    a(href='/TMProject/login') log out
    p username:  #{name}
    p earned points: #{totalPoints}
    h1 Projects Dashboard

    ul
        for project in projects
            li
                a(href='/TMProject/Project?id='+project.ID+'&user='+encodedUsername) #{project.name} - deadline: #{project.deadline}
        li
            a(href='/TMProject/AddProject?user='+encodedUsername) + new project